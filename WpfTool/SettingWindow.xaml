<Window x:Class="WpfTool.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTool"
        mc:Ignorable="d"
        Title="{DynamicResource Setting}" Height="600" Width="485" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <TabControl Width="Auto">
            <TabItem Header="{DynamicResource Setting_Common}">
                <StackPanel Margin="20">
                    <CheckBox x:Name="autoStartButton" Content="{DynamicResource Setting_AutoStart}" FontWeight="Bold" Checked="autoStartButton_Checked" Unchecked="autoStartButton_Unchecked" />
                    <WrapPanel Margin="0,20,0,0">
                        <Label FontWeight="Bold" Content="{DynamicResource Setting_language}" />
                        <ComboBox x:Name="languageComboBox" Width="140" Margin="5" SelectionChanged="languageComboBox_SelectionChanged" >
                            <ComboBoxItem DataContext="en_US" Content="English" />
                            <ComboBoxItem DataContext="zh_CN" Content="简体中文"/>
                        </ComboBox>
                    </WrapPanel>
                    <WrapPanel Margin="0,20,0,0">
                        <Label FontWeight="Bold" Content="{DynamicResource Setting_ConfigurationFileStorageLocation}" />
                        <RadioButton x:Name="UserConfigRadioButton" GroupName="config" VerticalAlignment="Center" Checked="UserConfigRadioButton_Checked" Content="{DynamicResource Setting_UserDirectory}" />
                        <RadioButton x:Name="AppConfigRadioButton" GroupName="config" VerticalAlignment="Center" Margin="5,0,0,0" Checked="AppConfigRadioButton_Checked" Content="{DynamicResource Setting_AppDirectory}" />
                        <Button x:Name="ConfigButton" Margin="10,0,0,0" Padding="15,0,15,0" Click="ConfigButton_Click" Content="{DynamicResource Setting_Open}" />
                    </WrapPanel>
                    <WrapPanel Margin="0,20,0,0">
                        <Label FontWeight="Bold" Content="{DynamicResource Setting_WordSelectionInterval}" ToolTip="{DynamicResource Setting_WordSelectionIntervalToolTip}" />
                        <Slider x:Name="WordSelectionIntervalSlider" Value="200" Minimum="100" Maximum="1000"
                                    MinWidth="200"
                                TickFrequency="100" TickPlacement="BottomRight" IsSnapToTickEnabled="True"
                                ValueChanged="WordSelectionIntervalSlider_ValueChanged" />
                        <TextBlock Text="{Binding ElementName=WordSelectionIntervalSlider, Path=Value, StringFormat={}{0}ms}" Margin="10,0,0,0" />
                    </WrapPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="{DynamicResource Setting_OCR}">
                <StackPanel Margin="20">
                    <GroupBox Header="{DynamicResource Setting_DefaultOCR}">
                        <WrapPanel>
                            <ComboBox x:Name="defaultOcrProvideComboBox" Width="140" Margin="5" SelectionChanged="defaultOcrProvideComboBox_SelectionChanged" >
                                <ComboBoxItem DataContext="BaiduCloud" Content="{DynamicResource CloudService_BaiduCloud}"/>
                                <ComboBoxItem DataContext="TencentCloud" Content="{DynamicResource CloudService_TencentCloud}"/>
                            </ComboBox>
                            <ComboBox x:Name="defaultOcrTypeComboBox" Width="120" Margin="5" SelectionChanged="defaultOcrTypeComboBox_SelectionChanged" />
                        </WrapPanel>
                    </GroupBox>
                    <GroupBox Header="{DynamicResource CloudService_TencentCloud}" Margin="0,20,0,0">
                        <StackPanel>
                            <WrapPanel Margin="0,5,0,0">
                                <Label Content="SecretID" />
                                <TextBox x:Name="TencentCloudOcr_SecretIdInput" Width="200" TextChanged="TencentCloudOcr_SecretIdInput_TextChanged" VerticalContentAlignment="Center" />
                            </WrapPanel>
                            <WrapPanel Margin="0,5,0,0">
                                <Label Content="SecretKey" />
                                <PasswordBox x:Name="TencentCloudOcr_SecretKeyInput" Width="200" Cursor="Arrow" PasswordChanged="TencentCloudOcr_SecretKeyInput_PasswordChanged" />
                            </WrapPanel>
                            <Label Content="{DynamicResource Setting_GetFreeOCRQuota}" Margin="0,5,0,0" Cursor="Hand" DataContext="https://cloud.tencent.com/document/product/866/35945" MouseDown="LinkLabel_MouseDown" />
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="{DynamicResource CloudService_BaiduCloud}" Margin="0,20,0,0">
                        <StackPanel>
                            <WrapPanel Margin="0,5,0,0">
                                <Label Content="AppKey" />
                                <TextBox x:Name="BaiduCloud_AppKeyInput" Width="200" TextChanged="BaiduCloud_AppKeyInput_TextChanged" VerticalContentAlignment="Center" />
                            </WrapPanel>
                            <WrapPanel Margin="0,5,0,0">
                                <Label Content="SecretKey" />
                                <PasswordBox x:Name="BaiduCloud_SecretKeyInput" Width="200" PasswordChanged="BaiduCloud_SecretKeyInput_PasswordChanged" />
                            </WrapPanel>
                            <Label Content="{DynamicResource Setting_GetFreeOCRQuota}" Margin="0,5,0,0" Cursor="Hand" DataContext="https://cloud.baidu.com/doc/OCR/s/fk3h7xu7h" MouseDown="LinkLabel_MouseDown" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="{DynamicResource Setting_MachineTranslate}">
                <StackPanel Margin="20">
                    <GroupBox Header="{DynamicResource Setting_defaultMachineTranslate}">
                        <WrapPanel>
                            <ComboBox x:Name="defaultTranslateProvideComboBox" Width="140" Margin="5" SelectionChanged="defaultTranslateProvideComboBox_SelectionChanged">
                                <ComboBoxItem DataContext="BaiduAI" Content="{DynamicResource CloudService_BaiduAI}"/>
                                <ComboBoxItem DataContext="TencentCloud" Content="{DynamicResource CloudService_TencentCloud}"/>
                            </ComboBox>
                            <ComboBox x:Name="sourceLanguageComboBox" Width="120" Margin="5" SelectionChanged="sourceLanguageComboBox_SelectionChanged" />
                            <ComboBox x:Name="targetLanguageComboBox" Width="120" Margin="5" SelectionChanged="targetLanguageComboBox_SelectionChanged" />
                        </WrapPanel>
                    </GroupBox>
                    <GroupBox Header="{DynamicResource CloudService_TencentCloud}" Margin="0,20,0,0">
                        <StackPanel>
                            <WrapPanel Margin="0,5,0,0">
                                <Label Content="SecretID" />
                                <TextBox x:Name="TencentCloudTranslate_SecretIdInput" Width="200" TextChanged="TencentCloudTranslate_SecretIdInput_TextChanged" VerticalContentAlignment="Center" />
                            </WrapPanel>
                            <WrapPanel Margin="0,5,0,0">
                                <Label Content="SecretKey" />
                                <PasswordBox x:Name="TencentCloudTranslate_SecretKeyInput" Width="200" PasswordChanged="TencentCloudTranslate_SecretKeyInput_PasswordChanged" />
                            </WrapPanel>
                            <Label Content="{DynamicResource Setting_GetFreeTranslateQuota}" Margin="0,5,0,0" Cursor="Hand" DataContext="https://cloud.tencent.com/document/product/551/35017" MouseDown="LinkLabel_MouseDown" />
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="{DynamicResource CloudService_BaiduAI}" Margin="0,20,0,0">
                        <StackPanel>
                            <WrapPanel Margin="0,5,0,0">
                                <Label Content="AppID" />
                                <TextBox x:Name="BaiduAI_AppIdInput" Width="200" TextChanged="BaiduAI_AppIdInput_TextChanged" VerticalContentAlignment="Center" />
                            </WrapPanel>
                            <WrapPanel Margin="0,5,0,0">
                                <Label Content="SecretKey" />
                                <PasswordBox x:Name="BaiduAI_SecretKeyInput" Width="200" PasswordChanged="BaiduAI_SecretKeyInput_PasswordChanged" />
                            </WrapPanel>
                            <Label Content="{DynamicResource Setting_GetFreeTranslateQuota}" Margin="0,5,0,0" Cursor="Hand" DataContext="https://fanyi-api.baidu.com/product/113" MouseDown="LinkLabel_MouseDown" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="{DynamicResource Setting_GlobalHotkey}">
                <StackPanel Margin="20">
                    <WrapPanel>
                        <Label Content="{DynamicResource Setting_OCR}" VerticalAlignment="Center" />
                        <TextBox x:Name="OcrHotKeyTextBox" Width="200" Cursor="Arrow" CaretBrush="Transparent" VerticalContentAlignment="Center" InputMethod.IsInputMethodEnabled="False"
                                 PreviewKeyDown="HotKeyTextBox_PreviewKeyDown" KeyUp="OcrHotKeyTextBox_KeyUp" />
                        <Label x:Name="OcrHotKeyConflictLabel" Content="{DynamicResource Setting_HotkeyConflict}" VerticalAlignment="Center" Visibility="Hidden" Foreground="Red" />
                    </WrapPanel>
                    <WrapPanel Margin="0,10,0,0">
                        <Label Content="{DynamicResource Setting_WordTranslation}" VerticalAlignment="Center" />
                        <TextBox x:Name="GetWordsTranslateHotKeyTextBox" Cursor="Arrow" Width="200" CaretBrush="Transparent" VerticalContentAlignment="Center" InputMethod.IsInputMethodEnabled="False"
                                     PreviewKeyDown="HotKeyTextBox_PreviewKeyDown" KeyUp="GetWordsTranslateHotKeyTextBox_KeyUp" />
                        <Label x:Name="GetWordsTranslateHotKeyConflictLabel" Content="{DynamicResource Setting_HotkeyConflict}" VerticalAlignment="Center" Visibility="Hidden" Foreground="Red" />
                    </WrapPanel>
                    <WrapPanel Margin="0,10,0,0">
                        <Label Content="{DynamicResource Setting_ScreenshotTranslation}" VerticalAlignment="Center" />
                        <TextBox x:Name="ScreenshotTranslateHotKeyTextBox" Cursor="Arrow" Width="200" CaretBrush="Transparent" VerticalContentAlignment="Center" InputMethod.IsInputMethodEnabled="False"
                                     PreviewKeyDown="HotKeyTextBox_PreviewKeyDown" KeyUp="ScreenshotTranslateHotKeyTextBox_KeyUp" />
                        <Label x:Name="ScreenshotTranslateHotKeyConflictLabel" Content="{DynamicResource Setting_HotkeyConflict}" VerticalAlignment="Center" Visibility="Hidden" Foreground="Red" />
                    </WrapPanel>
                    <WrapPanel Margin="0,10,0,0">
                        <Label Content="{DynamicResource Setting_TopMostToggle}" VerticalAlignment="Center" />
                        <TextBox x:Name="TopMostHotKeyTextBox" Cursor="Arrow" Width="200" CaretBrush="Transparent" VerticalContentAlignment="Center" InputMethod.IsInputMethodEnabled="False"
                                     PreviewKeyDown="HotKeyTextBox_PreviewKeyDown" KeyUp="TopMostHotKeyTextBox_KeyUp" />
                        <Label x:Name="TopMostHotKeyConflictLabel" Content="{DynamicResource Setting_HotkeyConflict}" VerticalAlignment="Center" Visibility="Hidden" Foreground="Red" />
                    </WrapPanel>
                    <WrapPanel Margin="0,10,0,0">
                        <Button Content="{DynamicResource Setting_Reset}" Click="Button_Click" Padding="5" />
                    </WrapPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="{DynamicResource Setting_about}">
                <StackPanel Margin="20">
                    <WrapPanel>
                        <Label Content="{DynamicResource Setting_Version}" />
                        <Label Content="1.8.0.0 (2022.12.25)" DataContext="https://github.com/NPCDW/WpfTool/releases" Cursor="Hand" MouseDown="LinkLabel_MouseDown" />
                    </WrapPanel>
                    <WrapPanel>
                        <Label Content="{DynamicResource Setting_license}" />
                        <Label Content="MIT License" DataContext="https://en.wikipedia.org/wiki/MIT_License" Cursor="Hand" MouseDown="LinkLabel_MouseDown" />
                    </WrapPanel>
                    <WrapPanel>
                        <Label Content="{DynamicResource Setting_AllRightsReserved}" />
                        <Label Content="© 2022 NPCDW" DataContext="https://github.com/NPCDW" Cursor="Hand" MouseDown="LinkLabel_MouseDown" />
                    </WrapPanel>
                    <WrapPanel>
                        <Label Content="{DynamicResource Setting_SourceCode}" />
                        <Label Content="https://github.com/NPCDW/WpfTool" DataContext="https://github.com/NPCDW/WpfTool" Cursor="Hand" MouseDown="LinkLabel_MouseDown" />
                    </WrapPanel>
                    <WrapPanel>
                        <Label Content="{DynamicResource Setting_feedback}" />
                        <Label Content="chenyongli0520@gmail.com" Cursor="Hand" DataContext="chenyongli0520@gmail.com"  MouseDown="CopyLabel_MouseDown" />
                    </WrapPanel>
                    <WrapPanel>
                        <Label Content="{DynamicResource Setting_Links}" />
                        <Label Content="https://www.0520.site" DataContext="https://www.0520.site" Cursor="Hand" MouseDown="LinkLabel_MouseDown" />
                    </WrapPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
